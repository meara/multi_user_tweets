<div class="container">

  <% if session[:user_id] %>
    <div>

      <h1>Welcome, human!</h1>
      <h2>What would you like to tell the twitterverse?</h2>

      <form id='tweet-form' action='/tweet' method="POST">
        <input id='tweet-text' type='text' name='tweet'/ autofocus>
        <input type='submit' value='Tweet it!'/>
      </form>

      <div class='messages'>
      </div>


      <p>
        <button><a href="/sign_out">Sign Out</a></button>
      </p>
    </div>
  <% else %>
  <h1>Greetings, human!</h1>
  <h2></h2>
    <button><a href="/sign_in">Sign In with Twitter</a></button>
  <% end %>
  
</div>
